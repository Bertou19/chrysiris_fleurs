{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
{{ form_start(registrationForm) }}
<section>
    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-5 col-sm-4">

                <h1 class="inscription-form mt-5 mb-5">Inscription</h1>

                {{ form_errors(registrationForm) }}
                <fieldset class="mb-4">
                    <legend class="mb-4">Mon identité</legend>
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.nom) }}
                    {{ form_row(registrationForm.prenom) }}
                </fieldset>
                <fieldset class="mb-3">
                    <legend class="mb-4">Mes coordonnées</legend>
                    {{ form_row(registrationForm.adresse) }}
                    {{ form_row(registrationForm.ville) }}
                    {{ form_row(registrationForm.zipcode) }}
                    {{ form_row(registrationForm.telephone) }}
                </fieldset>

                {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.RGPDConsent) }}

                <button type="submit" class="btn btn-lg btn-cambridge text-white my-3">M'inscrire</button>
                <a href="{{ path('app_login') }}" class="btn btn-secondary">Me connecter</a>
                {{ form_end(registrationForm) }}
                {% endblock %}