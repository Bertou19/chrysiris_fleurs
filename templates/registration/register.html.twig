{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
{{ form_start(registrationForm) }}
<section>
    <div class="container my-3">
        <div class="row">
            <div class="col">

                <h1 class="mt-5">Inscription</h1>

                {{ form_errors(registrationForm) }}
                <fieldset class="mb-3">
                    <legend>Mon identité</legend>
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.nom) }}
                    {{ form_row(registrationForm.prenom) }}
                </fieldset>
                <fieldset class="mb-3">
                    <legend>Mes coordonnées</legend>
                    {{ form_row(registrationForm.adresse) }}
                    {{ form_row(registrationForm.ville) }}
                    {{ form_row(registrationForm.zipcode) }}
                    {{ form_row(registrationForm.telephone) }}
                </fieldset>




                {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.RGPDConsent) }}

                <button type="submit" class="btn btn-lg btn-success my-3">M'inscrire</button>
                <a href="{{ path('app_login') }}" class="btn btn-lg btn-secondary">Me connecter</a>
                {{ form_end(registrationForm) }}
                {% endblock %}